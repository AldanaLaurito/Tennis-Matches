@model Baufest.Tennis.Web.Models.CanchasListViewModel

@{
    ViewBag.Title = "Canchas";
}

<h2>Canchas</h2>

@Html.ActionLink("Agregar Cancha", "Agregar")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Partidos del día</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.PartidosEnElDia</td>
                <td>@Html.ActionLink("Editar", "Editar", new { id = item.Id })</td>
            </tr>
        }
    </tbody>
</table>
