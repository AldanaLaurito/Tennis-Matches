@model Baufest.Tennis.Web.Models.JugadorViewModel

@Html.ValidationSummary(true, null, new { @class = "text-danger" })

<div class="form-group">
    @Html.LabelFor(m => m.Nombre)
    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Nombre, null, new {@class = "text-danger"})
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Puntos)
    @Html.TextBoxFor(m => m.Puntos, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Puntos, null, new { @class = "text-danger" })
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary">Guardar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning"})
</div>
